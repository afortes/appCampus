
<section>
  <div class="container">
    <div class="row">
      <div class="col-lg-3">
          <%= link_to 'Crear nuevo', new_player_path,class: 'btn btn-large btn-primary' %>
      </div>
      <div class="col-lg-9">
        <table class="table">
          <h3>Inscritos actualmente en la aplicaci√≥n</h3>
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Apellidos</th>
              <th>Categoria</th>
              <th>Club</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @players.each do |player| %>
              <tr>
                <td><%= player.nombre %></td>
                <td><%= player.apelidos %></td>
                <td><%= player.categoria %></td>
                <td><%= player.club %></td>
                <td><span class="glyphicon glyphicon-search"><%= link_to 'Ver', player %></span></td>
                <td><span class="glyphicon glyphicon-pencil"><%= link_to 'Editar', edit_player_path(player) %></span></td>
                <td><span class="glyphicon glyphicon-trash"><%= link_to 'Borrar', player, method: :delete, data: { confirm: 'Are you sure?' } %></span></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="text-center"><%= will_paginate @players, renderer: BootstrapPagination::Rails %></div> 
        
  

      </div>
    </div>
  </div>
</section>


